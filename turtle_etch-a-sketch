from turtle import Turtle,Screen
tim=Turtle()
screen=Screen()
screen.listen()

def forwards():
    tim.forward(10)
def backwards():
    tim.back(10)
def left():
    tim.left(10)
def right():
    tim.right(10)


def clear_everything():
    tim.clear()
    tim.penup()
    tim.home()
    tim.pendown()

    

screen.onkey(forwards,"W")
screen.onkey(backwards,"S")
screen.onkey(left,"A")
screen.onkey(right,"D")
screen.onkey(clear_everything,"C")


screen.exitonclick()
